config BR2_TARGET_ROOTFS_EXFAT
	bool "exfat root filesystem"
	select BR2_PACKAGE_HOST_EXFAT_TOOLS
	help
	  Build a exfat root filesystem. If you enable this option, you
	  probably want to enable the exfat-tools package too.

if BR2_TARGET_ROOTFS_EXFAT

config BR2_TARGET_ROOTFS_EXFAT_LABEL
	string "filesystem label"

config BR2_TARGET_ROOTFS_EXFAT_SIZE
	string "filesystem size"
	default "16M"
	help
	  The size of the filesystem image in bytes.
	  Suffix with K, M, G or T for power-of-two kilo-, mega-, giga-
	  or terabytes.

choice
	prompt "Compression method"
	default BR2_TARGET_ROOTFS_EXFAT_NONE
	help
	  Select compressor for exfat filesystem of the root
	  filesystem

config BR2_TARGET_ROOTFS_EXFAT_NONE
	bool "no compression"
	help
	  Do not compress the exfat filesystem.

config BR2_TARGET_ROOTFS_EXFAT_GZIP
	bool "gzip"
	help
	  Do compress the exfat filesystem with gzip.

config BR2_TARGET_ROOTFS_EXFAT_BZIP2
	bool "bzip2"
	help
	  Do compress the exfat filesystem with bzip2.

config BR2_TARGET_ROOTFS_EXFAT_LZ4
	bool "lz4"
	help
	  Do compress the exfat filesystem with lz4.

config BR2_TARGET_ROOTFS_EXFAT_LZMA
	bool "lzma"
	help
	  Do compress the exfat filesystem with lzma.

config BR2_TARGET_ROOTFS_EXFAT_LZO
	bool "lzo"
	help
	  Do compress the exfat filesystem with lzop.

config BR2_TARGET_ROOTFS_EXFAT_XZ
	bool "xz"
	help
	  Do compress the exfat filesystem with xz.

config BR2_TARGET_ROOTFS_EXFAT_ZSTD
	bool "zstd"
	help
	  Do compress the exfat filesystem with zstd.

endchoice
endif # BR2_TARGET_ROOTFS_EXFAT
